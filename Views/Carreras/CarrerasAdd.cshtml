
@{
    ViewData["Title"] = "Incluir Carrera";
}

<div class="container">
    <h1 class="text-center">Agregar Carrera</h1>
    <br><br>
</div>

<form asp-asp-controller="Carreras" asp-action="CarrerasSave">
    <div class="mb-3">
        <label for="nombre" class="from-label">Nombre</label>
        <br>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba la carrera" />
        <br>

        <label for="precio" class="from-label">Tetramestres</label>
        <br>
        <input type="number" class="form-control" id="nombre" name="nombre" placeholder="Numero de Tetras" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <button asp-action="Carreraslist" type="Submit" class="btn btn-secundary">Cancelar</button>
</form>

